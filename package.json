{
	"name": "replicate-monorepo",
	"private": true,
	"packageManager": "pnpm@10.12.1",
	"scripts": {
		"build": "pnpm --filter @trestleinc/replicate build",
		"dev": "pnpm --filter @trestleinc/replicate dev",
		"test": "pnpm --filter @trestleinc/replicate test",
		"clean": "pnpm --filter @trestleinc/replicate clean",
		"dev:tanstack": "pnpm --filter interval dev",
		"dev:expo": "pnpm --filter interval-expo start",
		"dev:sveltekit": "pnpm --filter svinterval dev",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"@convex-dev/eslint-plugin": "catalog:",
		"@eslint/js": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:"
	},
	"dependencies": {
		"convex": "catalog:"
	},
	"pnpm": {
		"overrides": {
			"convex": "^1.31.5",
			"entities": "^6.0.1",
			"lib0": "^0.2.117",
			"lightningcss": "1.30.1",
			"vite": "^7.3.1",
			"yjs": "^13.6.29"
		}
	}
}
