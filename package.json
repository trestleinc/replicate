{
	"name": "replicate-monorepo",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.12.1",
	"scripts": {
		"codegen": "convex codegen --component-dir ./packages/replicate/src/component",
		"build:packages": "pnpm -r --filter './packages/*' build",
		"build:replicate": "pnpm --filter @trestleinc/replicate build",
		"build": "pnpm -r --filter './apps/*' build",
		"build:sveltekit": "pnpm --filter svinterval build",
		"build:tanstack": "pnpm --filter interval build",
		"dev": "pnpm --filter @trestleinc/replicate dev",
		"dev:convex": "convex dev",
		"dev:sveltekit": "pnpm --filter svinterval dev",
		"dev:tanstack": "pnpm --filter interval dev",
		"dev:expo": "pnpm --filter interval-expo start",
		"test": "pnpm --filter @trestleinc/replicate test",
		"clean": "pnpm --filter @trestleinc/replicate clean",
		"check": "pnpm -r --filter './apps/*' check",
		"cloud:sveltekit": "pnpm build:packages && npx convex deploy --cmd-url-env-var-name PUBLIC_CONVEX_URL --cmd 'pnpm build:sveltekit'",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"@convex-dev/eslint-plugin": "catalog:",
		"@eslint/js": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:"
	},
	"dependencies": {
		"@convex-dev/better-auth": "^0.10.10",
		"@trestleinc/replicate": "workspace:*",
		"better-auth": "1.4.9",
		"convex": "catalog:",
		"zod": "catalog:"
	},
	"pnpm": {
		"overrides": {
			"convex": "^1.31.5",
			"entities": "^6.0.1",
			"lib0": "^0.2.117",
			"lightningcss": "1.30.1",
			"vite": "^7.3.1",
			"yjs": "^13.6.29"
		}
	}
}
