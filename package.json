{
  "name": "@trestleinc/replicate",
  "version": "1.0.0",
  "description": "Offline-first data replication with Yjs CRDTs and Convex",
  "repository": "github:trestleinc/replicate",
  "homepage": "https://github.com/trestleinc/replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/replicate/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "yjs",
    "offline-first",
    "tanstack"
  ],
  "type": "module",
  "private": false,
  "resolutions": {
    "convex": "1.30.0"
  },
  "overrides": {
    "convex": "1.30.0"
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf dist",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublish": "bun run build && bun run check:fix"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/shared/index.d.ts",
        "default": "./dist/shared.js"
      }
    },
    "./package.json": "./package.json",
    "./client": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/client/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/component/convex.config.d.ts",
        "default": "./dist/component/convex.config.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@effect/platform": "0.93.6",
    "@logtape/logtape": "1.1.2",
    "@tanstack/offline-transactions": "0.1.3",
    "effect": "3.19.8",
    "idb-keyval": "6.2.2",
    "y-indexeddb": "9.0.12",
    "yjs": "13.6.27"
  },
  "peerDependencies": {
    "@tanstack/db": "0.4.20",
    "convex": "1.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@edge-runtime/vm": "5.0.0",
    "@rsbuild/plugin-type-check": "1.3.2",
    "@rslib/core": "0.17.1",
    "@tanstack/db": "0.4.20",
    "@types/node": "24.10.0",
    "convex": "1.30.0",
    "convex-test": "0.0.41",
    "dotenv": "17.2.3",
    "fake-indexeddb": "6.2.5",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "zod": "4.1.12"
  },
  "main": "./dist/shared.js",
  "types": "./dist/shared/index.d.ts",
  "module": "./dist/shared.js",
  "publishConfig": {
    "access": "public"
  }
}
