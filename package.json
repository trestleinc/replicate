{
  "name": "@trestleinc/replicate",
  "version": "1.1.1",
  "description": "Offline-first data replication with Yjs CRDTs and Convex",
  "repository": "github:trestleinc/replicate",
  "homepage": "https://github.com/trestleinc/replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/replicate/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "yjs",
    "offline-first",
    "tanstack"
  ],
  "type": "module",
  "private": false,
  "resolutions": {
    "convex": "^1.31.0"
  },
  "overrides": {
    "convex": "^1.31.0"
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/shared/index.d.ts",
        "default": "./dist/shared.js"
      }
    },
    "./package.json": "./package.json",
    "./client": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/client/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/component/convex.config.d.ts",
        "default": "./dist/component/convex.config.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@effect/platform": "0.93.8",
    "@logtape/logtape": "1.2.2",
    "abstract-level": "3.1.1",
    "browser-level": "3.0.0",
    "effect": "3.19.12",
    "y-indexeddb": "9.0.12",
    "y-leveldb": "0.2.0"
  },
  "peerDependencies": {
    "@tanstack/db": "^0.5.0",
    "convex": "^1.31.0",
    "lib0": "^0.2.0",
    "yjs": "^13.6.0"
  },
  "peerDependenciesMeta": {
    "sql.js": {
      "optional": true
    },
    "@op-engineering/op-sqlite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "1.1.1",
    "@edge-runtime/vm": "5.0.0",
    "@microsoft/api-extractor": "7.55.2",
    "@rsbuild/plugin-eslint": "1.2.0",
    "@rsbuild/plugin-type-check": "1.3.2",
    "@rslib/core": "0.18.4",
    "@stylistic/eslint-plugin": "5.6.1",
    "@tanstack/db": "0.5.12",
    "@types/node": "25.0.2",
    "@types/sql.js": "1.4.9",
    "convex": "1.31.0",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "fake-indexeddb": "6.2.5",
    "globals": "16.5.0",
    "lib0": "0.2.114",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "yjs": "13.6.27",
    "zod": "4.1.13"
  },
  "main": "./dist/shared.js",
  "types": "./dist/shared/index.d.ts",
  "module": "./dist/shared.js",
  "publishConfig": {
    "access": "public"
  }
}
