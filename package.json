	},
	"scripts": {
		"codegen": "convex codegen --component-dir ./packages/replicate/src/component",
		"build:packages": "bun run --filter './packages/*' build",
		"build:replicate": "bun run --filter @trestleinc/replicate build",
		"build": "bun run --filter './apps/*' build",
		"build:sveltekit": "bun run --filter svinterval build",
		"build:tanstack": "bun run --filter interval build",
		"dev": "bun run --filter @trestleinc/replicate dev",
		"dev:convex": "convex dev",
		"dev:sveltekit": "bun run --filter svinterval dev",
		"dev:tanstack": "bun run --filter interval dev",
		"dev:expo": "bun run --filter interval-expo start",
		"test": "bun run --filter @trestleinc/replicate test",
		"clean": "bun run --filter @trestleinc/replicate clean",
		"check": "bun run --filter './apps/*' check",
		"start:sveltekit": "bun run --filter svinterval wrangler dev --port 4176",
		"deploy:sveltekit:preview": "bun run build:packages && bun run build:sveltekit && bun run --filter svinterval wrangler deploy --env preview",
		"deploy:sveltekit:production": "bun run build:packages && bunx convex deploy --cmd-url-env-var-name PUBLIC_CONVEX_URL --cmd 'bun run build:sveltekit' && bun run --filter svinterval wrangler deploy --env production",
		"cloud:sveltekit": "bun run build:packages && bunx convex deploy --cmd-url-env-var-name PUBLIC_CONVEX_URL --cmd 'bun run build:sveltekit'",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"trustedDependencies": [
		"esbuild"
	],
	"overrides": {
		"convex": "^1.31.5",
		"entities": "^6.0.1",
		"lib0": "^0.2.117",
		"lightningcss": "1.30.1",
		"vite": "^7.3.1",
		"yjs": "^13.6.29"
	},
	"devDependencies": {
		"@convex-dev/eslint-plugin": "catalog:",
		"@eslint/js": "catalog:",
		"eslint": "catalog:",
		"eslint-config-prettier": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"prettier-plugin-tailwindcss": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:"
	},
	"dependencies": {
		"@convex-dev/better-auth": "^0.10.10",
		"@trestleinc/replicate": "workspace:*",
		"better-auth": "1.4.9",
		"convex": "catalog:",
		"zod": "catalog:"
	}
}
