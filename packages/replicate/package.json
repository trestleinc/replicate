{
	"name": "@trestleinc/replicate",
	"version": "2.0.0-preview.0",
	"private": false,
	"description": "Offline-first data replication with Yjs CRDTs and Convex",
	"keywords": [
		"convex",
		"crdt",
		"offline-first",
		"replicate",
		"tanstack",
		"yjs"
	],
	"homepage": "https://github.com/trestleinc/replicate#readme",
	"bugs": {
		"url": "https://github.com/trestleinc/replicate/issues"
	},
	"license": "Apache-2.0",
	"repository": "github:trestleinc/replicate",
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"src"
	],
	"type": "module",
	"main": "./dist/shared/index.js",
	"module": "./dist/shared/index.js",
	"types": "./dist/shared/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/shared/index.d.ts",
			"import": {
				"default": "./dist/shared/index.js"
			}
		},
		"./package.json": "./package.json",
		"./client": {
			"types": "./dist/client/index.d.ts",
			"import": {
				"@convex-dev/component-source": "./src/client/index.ts",
				"default": "./dist/client/index.js"
			}
		},
		"./server": {
			"types": "./dist/server/index.d.ts",
			"import": {
				"default": "./dist/server/index.js"
			}
		},
		"./convex.config": {
			"types": "./dist/component/convex.config.d.ts",
			"import": {
				"@convex-dev/component-source": "./src/component/convex.config.ts",
				"default": "./dist/component/convex.config.js"
			}
		},
		"./worker": {
			"import": "./dist/client/persistence/sqlite/worker.js"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "oxfmt --write . && oxlint --fix && tsdown",
		"dev": "tsdown --watch",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@logtape/logtape": "1.3.5",
		"@logtape/pretty": "2.0.0"
	},
	"devDependencies": {
		"@edge-runtime/vm": "5.0.0",
		"@microsoft/api-extractor": "7.55.2",
		"@tanstack/db": "0.5.15",
		"@testing-library/jest-dom": "6.9.1",
		"@trestleinc/convex-oxlint": "0.1.0",
		"@types/node": "25.0.3",
		"@types/sql.js": "1.4.9",
		"@typescript/native-preview": "7.0.0-dev.20260103.1",
		"convex": "1.31.4",
		"convex-test": "0.0.41",
		"dotenv": "latest",
		"fake-indexeddb": "6.2.5",
		"lib0": "0.2.116",
		"oxfmt": "0.21.0",
		"oxlint": "1.36.0",
		"publint": "0.3.16",
		"tsdown": "0.18.2",
		"typescript": "5.9.3",
		"vitest": "4.0.16"
	},
	"peerDependencies": {
		"@op-engineering/op-sqlite": "^9.0.0",
		"@tanstack/db": "^0.5.15",
		"convex": "^1.31.4",
		"lib0": "^0.2.0",
		"wa-sqlite": "^1.0.0",
		"y-protocols": "^1.0.7",
		"yjs": "^13.6.0"
	},
	"peerDependenciesMeta": {
		"wa-sqlite": {
			"optional": true
		},
		"@op-engineering/op-sqlite": {
			"optional": true
		}
	}
}
